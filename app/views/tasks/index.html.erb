<h1>Tasklist_一覧</h1>

<% if @tasks.any? %>
	<table class="table table-striped">
		<therd>
			<tr>
				<th>id</th>
				<th>status</th>
				<th>content</th><th></th><th></th>
			</tr>
		</therd>
		<tbody>
			<% @tasks.each do |task| %>
	  		<tr>
	  			<td><%= link_to task.id, task %></td>
	  			<td><%= task.status %></td>
	  			<td><%= task.content %></td>
	  			<td><%= link_to "編集", edit_task_path(task), class: "btn btn-default" %></td>
	  			<td><%= link_to "削除", task, class: "btn btn-danger", method: :delete, data: { confirm: "本当に削除しますか？"} %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
	<div>
		<%= paginate @tasks %>
	</div>
<% end %>

<%= link_to "新規タスク登録", new_task_path, class: "btn btn-primary" %>
