<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |err_message| %>
        <li><%= err_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :status, "ステータス" %>
  <%= f.text_field :status %>
  <br>
  <%= f.label :content, "タスク" %>
  <%= f.text_field :content %>
  <br>
  <%= f.submit "登録" %>
<% end %>
