<h1>id = <%= @task.id %> のタスク詳細ページ</h1>

<table class="table table-bordered">
  <tr>
    <th>id</th>
    <th>content</th>
  </tr>
  <tr>
    <td><%= @task.id %></td>
    <td><%= @task.content %></td>
  </tr>
</table>

<%= link_to "内容を編集する", edit_task_path(@task), class: "btn btn-default" %>
<%= link_to "削除する", @task, class: "btn btn-danger", method: :delete, data: { confirm: "本当に削除しますか？"} %>
